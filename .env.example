# Environment configuration for Retrospective Insights Bot

# Dashboard API Configuration
DASHBOARD_AUTH_URL=<YOUR_DASHBOARD_AUTH_URL_HERE>
DASHBOARD_DATA_URL=<YOUR_DASHBOARD_DATA_URL_HERE>

# AI Service Configuration - Choose Azure OpenAI OR OpenAI (not both)

# Azure OpenAI Configuration (recommended)
AZURE_OPENAI_API_KEY=<YOUR_AZURE_OPENAI_API_KEY_HERE>
AZURE_OPENAI_ENDPOINT=<YOUR_AZURE_OPENAI_ENDPOINT_HERE>
AZURE_OPENAI_MODEL=gpt-4.1-mini
AZURE_OPENAI_DEPLOYMENT=gpt-4.1-mini
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# Regular OpenAI Configuration (alternative)
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_MODEL=gpt-4-turbo

# Common AI Configuration
OPENAI_MAX_TOKENS=2000

# Application Configuration
LOG_LEVEL=INFO
CACHE_TTL=3600
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# Report Configuration
DEFAULT_LOOKBACK_MONTHS=5
OUTPUT_FORMAT=markdown
CHART_FORMAT=png