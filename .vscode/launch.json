{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Python File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}"
        },
        {
            "name": "Python: Run Analysis (Gridsz Data Team)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_analysis.py",
            "args": [
                "Gridsz Data Team"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Run Analysis (All Teams)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_analysis.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: List Teams",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_analysis.py",
            "args": [
                "--list-teams"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "FastAPI: Run API Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "jinja": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "FastAPI: Run API Server (Production Mode)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8000",
                "--workers",
                "1"
            ],
            "jinja": true,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "FastAPI: Direct Run (api.py)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/api.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}